{
  "name": "mm2-src",
  "config": {
    "connector.class": "org.apache.kafka.connect.mirror.MirrorSourceConnector",
    "tasks.max": "2",
    "security.protocol": "SASL_SSL",
    "sasl.mechanism": "PLAIN",
    "sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"admin\" password=\"your_password\";",
    "ssl.truststore.location": "/etc/kafka/secrets/cluster1/kafka.kafka-1.truststore.jks",
    "ssl.truststore.password": "your_password",
    "ssl.keystore.location": "/etc/kafka/secrets/cluster1/kafka.kafka-1.keystore.pkcs12",
    "ssl.keystore.password": "your_password",
    "source.cluster.alias": "cluster1",
    "source.cluster.bootstrap.servers": "kafka-1:1092,kafka-2:2092,kafka-3:3092",
    "source.cluster.security.protocol": "SASL_SSL",
    "source.cluster.sasl.mechanism": "PLAIN",
    "source.cluster.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"admin\" password=\"your_password\";",
    "source.cluster.ssl.truststore.location": "/etc/kafka/secrets/cluster1/kafka.kafka-1.truststore.jks",
    "source.cluster.ssl.truststore.password": "your_password",
    "source.cluster.ssl.keystore.location": "/etc/kafka/secrets/cluster1/kafka.kafka-1.keystore.pkcs12",
    "source.cluster.ssl.keystore.password": "your_password",
    "target.cluster.bootstrap.servers": "kafka-b-4:4093,kafka-b-5:5093,kafka-b-6:6093",
    "target.cluster.security.protocol": "SASL_SSL",
    "target.cluster.sasl.mechanism": "PLAIN",
    "target.cluster.sasl.jaas.config": "org.apache.kafka.common.security.plain.PlainLoginModule required username=\"admin\" password=\"your_password\";",
    "target.cluster.ssl.truststore.location": "/etc/kafka/secrets/cluster2/kafka.kafka-b-4.truststore.jks",
    "target.cluster.ssl.truststore.password": "your_password",
    "target.cluster.ssl.keystore.location": "/etc/kafka/secrets/cluster2/kafka.kafka-b-4.keystore.pkcs12",
    "target.cluster.ssl.keystore.password": "your_password",
    "replication.policy.class": "org.apache.kafka.connect.mirror.IdentityReplicationPolicy",
    "topics": ".*",
    "topics.blacklist": "(__.*|_schemas|connect-.*|mm2-.*)",
    "groups.blacklist": "(connect-.*|mm2-.*)",
    "emit.checkpoints.enabled": "true",
    "emit.heartbeats.enabled": "true",
    "refresh.topics.interval.seconds": "30",
    "refresh.groups.interval.seconds": "30"
  }
}
